# Telegram Bot Configuration
TG_BOT_TOKEN=your_bot_token
APP_ID=your_app_id
API_HASH=your_api_hash
BOT_USERNAME=your_bot_username
ADMINS=your_user_id  # Comma separated for multiple

# Database Configuration
DATABASE_URL=postgres://user:password@localhost/dbname

# Working Directory
WORK_DIR=./bot/
DOWNLOADS_FOLDER=DOWNLOADS
LOCAL_STORAGE=./bot/DOWNLOADS  # Where to store downloaded files

# File/Folder Naming
PLAYLIST_NAME_FORMAT={title} - Playlist
TRACK_NAME_FORMAT={title} - {artist}

# Rclone/Index Configuration (only for UPLOAD_MODE=RCLONE)
RCLONE_CONFIG=/path/to/rclone.conf  # or URL to download
RCLONE_DEST=remote:AppleMusic
INDEX_LINK=https://your-index.link/AppleMusic  # Optional

# Qobuz Configuration (optional)
QOBUZ_EMAIL=your_qobuz@email.com
QOBUZ_PASSWORD=your_qobuz_password
QOBUZ_USER=your_qobuz_user_id
QOBUZ_TOKEN=your_qobuz_token

# Deezer Configuration (optional)
DEEZER_EMAIL=your_deezer@email.com
DEEZER_PASSWORD=your_deezer_password
DEEZER_BF_SECRET=your_bf_secret
DEEZER_ARL=your_deezer_arl

# Tidal Configuration (optional)
ENABLE_TIDAL=True
TIDAL_MOBILE=True
TIDAL_MOBILE_TOKEN=your_mobile_token
TIDAL_ATMOS_MOBILE_TOKEN=your_atmos_token
TIDAL_TV_TOKEN=your_tv_token
TIDAL_TV_SECRET=your_tv_secret
TIDAL_CONVERT_M4A=False
TIDAL_REFRESH_TOKEN=your_refresh_token
TIDAL_COUNTRY_CODE=US

# Concurrent Workers
MAX_WORKERS=5

# Apple Music Configuration
DOWNLOADER_PATH=./downloader/am_downloader.sh
INSTALLER_PATH=./downloader/install_am_downloader.sh
APPLE_DEFAULT_FORMAT=alac  # alac or atmos
APPLE_ALAC_QUALITY=192000  # 192000, 256000, 320000
APPLE_ATMOS_QUALITY=2768   # Only one option for Atmos

# Upload Mode: Telegram, RCLONE, or Local
UPLOAD_MODE=Telegram

# Optional Settings (can be set via /settings command)
# BOT_PUBLIC: True or False (if False, only authorized users can use)
# ANTI_SPAM: OFF, USER, or CHAT+
# ART_POSTER: True or False (post album art as image)
# PLAYLIST_SORT: True or False
# ARTIST_BATCH_UPLOAD: True or False
# PLAYLIST_CONCURRENT: True or False
# PLAYLIST_LINK_DISABLE: True or False (disable links for sorted playlists)
# ALBUM_ZIP: True or False
# PLAYLIST_ZIP: True or False
# ARTIST_ZIP: True or False
# RCLONE_LINK_OPTIONS: False, Index, RCLONE, or Both
# QOBUZ_QUALITY: 5,6,7,27 (see qualities in the bot)
# TIDAL_QUALITY: LOW, HIGH, LOSSLESS, HI_RES
# TIDAL_SPATIAL: OFF, ATMOS AC3 JOC, ATMOS AC4, Sony 360RA
